{
    "name": "kalythesainz",
    "version": "1.0.0",
    "description": "A simple 3D web framework built on top of Three.js with declarative API and visual tooling",
    "type": "module",
    "main": "index.js",
    "module": "dist/kalythesainz.min.js",
    "unpkg": "dist/kalythesainz.umd.min.js",
    "jsdelivr": "dist/kalythesainz.min.js",
    "exports": {
        ".": {
            "import": "./index.js",
            "require": "./dist/kalythesainz.umd.min.js"
        },
        "./core/*": "./core/*.js",
        "./engine/*": "./engine/*.js",
        "./objects/*": "./objects/*.js",
        "./tools/*": "./tools/*.js",
        "./utils/*": "./utils/*.js"
    },
    "files": [
        "dist",
        "core",
        "engine",
        "objects",
        "tools",
        "utils",
        "index.js",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "vite",
        "build": "npm run build:prod && npm run build:dev",
        "build:prod": "vite build --mode production",
        "build:dev": "vite build --mode development",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "3d",
        "webgl",
        "threejs",
        "framework",
        "visual-tools"
    ],
    "author": "KALYTHESAINZ Team",
    "license": "MIT",
    "peerDependencies": {
        "three": "^0.160.0"
    },
    "devDependencies": {
        "fast-check": "^3.15.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "terser": "^5.46.0",
        "vite": "^5.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "transform": {},
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^three$": "<rootDir>/tests/__mocks__/three.js"
        },
        "testEnvironmentOptions": {
            "customExportConditions": [
                "node",
                "node-addons"
            ]
        },
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    },
    "dependencies": {
        "gl": "^8.1.6",
        "jsdom": "^28.0.0"
    }
}
