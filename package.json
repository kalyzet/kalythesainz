{
    "name": "kalythesainz",
    "version": "1.0.0",
    "description": "A simple 3D web framework built on top of Three.js with declarative API and visual tooling",
    "type": "module",
    "main": "index.js",
    "exports": {
        ".": "./index.js",
        "./core/*": "./core/*.js",
        "./engine/*": "./engine/*.js",
        "./objects/*": "./objects/*.js",
        "./tools/*": "./tools/*.js",
        "./utils/*": "./utils/*.js"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "3d",
        "webgl",
        "threejs",
        "framework",
        "visual-tools"
    ],
    "author": "KALYTHESAINZ Team",
    "license": "MIT",
    "peerDependencies": {
        "three": "^0.160.0"
    },
    "devDependencies": {
        "fast-check": "^3.15.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "vite": "^5.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "extensionsToTreatAsEsm": [
            ".js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ],
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapping": {
            "^three$": "<rootDir>/node_modules/three/build/three.module.js"
        },
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ]
    },
    "dependencies": {
        "gl": "^8.1.6",
        "jsdom": "^28.0.0"
    }
}
